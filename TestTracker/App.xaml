<Application x:Class="TestTracker.App"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:common="clr-namespace:Common"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>

                <!-- Set default skin -->
                <ResourceDictionary Source="Themes\Skins\ExpressionDark.xaml"/>
                <ResourceDictionary Source="Themes\WindowStyle.xaml"/>
                <ResourceDictionary Source="/TestTracker;component/Resources/DataGrid/ScrollViewerStyle.xaml" />
                <ResourceDictionary Source="/TestTracker;component/Resources/DataGrid/DataGridStyle.xaml" />

            </ResourceDictionary.MergedDictionaries>
            <common:SettingConverter x:Key="SettingConv"></common:SettingConverter >
        </ResourceDictionary>
    </Application.Resources>
</Application>
